<% include ../partials/header %>

<div class="container">
    <h1 class="text-center">Add comment for <%= campground.name %></h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="text" name="comment[text]"></input>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit"></input>
                </div>
            </form>
            <a href="/campgrounds">Back</a>
        </div>

</div>

<% include ../partials/footer %>