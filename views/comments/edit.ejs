<% include ../partials/header %>

<div class="container">
    <h1 class="text-center">Edit Comment</h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]"></input>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit"></input>
                </div>
            </form>
            <a href="/campgrounds">Back</a>
        </div>

</div>

